@model FolhaPagamento.Models.User

@{
    ViewData["Title"] = "Create";
}


<div>
    <a asp-action="Index" class="btn btn-secondary my-2">Voltar</a>
</div>


<div class="container">
    <div class="main d-flex align-items-center justify-content-center">
        <form asp-action="Create" id="myForm" class="form-control text-start">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="cabecalho d-flex align-items-center justify-content-center">
                <div class="row">
                    <div class="col col-auto w-100 text-center">
                        Logo/Nome
                    </div>
                    <div class="col mt-0 text-center">
                        <h4 class="fw-bold">Cadastro de Funcionario</h4>
                        <h6 class="text-secondary">Atenção ao digitar os dados!</h6>
                        <p class="text-secondary">Campos que possuem <span class="required">*</span> são obrigatórios!</p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Username" class="text-start mt-3">Username<span class="required">*</span></label>
                        <input asp-for="Username"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Password" class="text-start mt-3">Password<span class="required">*</span></label>
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UserRole" class="text-start mt-3">Nivel de Acesso <span class="required">*</span></label>
                        <select asp-for="UserRole" class="form-select"> 
                            <option value="1">Administrador</option>
                            <option value="2">Colaborador</option>
                        </select>
                        <span asp-validation-for="UserRole" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Cargo" class="text-start mt-3">Cargo<span class="required">*</span></label>
                        <input asp-for="Cargo"/>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Nome" class="text-start mt-3">Nome <span class="required">*</span></label>
                        <input asp-for="Nome"  />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Endereco" class="text-start mt-3">Endereço <span class="required">*</span></label>
                        <input asp-for="Endereco" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Telefone" class="text-start mt-3">Telefone</label>
                        <input asp-for="Telefone" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="RG" class="text-start mt-3">RG <span class="required">*</span></label>
                        <input asp-for="RG" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="CPF" class="text-start mt-3">CPF <span class="required">*</span></label>
                        <input asp-for="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botao enviar -->
            <div class="d-grid gap-2 mt-3">
                <input type="submit" value="Criar Funcionario" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}